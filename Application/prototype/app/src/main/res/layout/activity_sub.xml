<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="NameView" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/nameText"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@id/nameText"
        android:layout_alignRight="@id/nameText"
        android:text="AgeView" />

    <ListView
        android:id="@+id/ListVeiw"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_below="@id/ageText"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"

 />

    <Button
        android:id="@+id/Totalbutton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@id/advicebutton"
        android:layout_alignRight="@id/ageText"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="기록" />

    <Button
        android:id="@+id/advicebutton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@id/ListVeiw"
        android:layout_alignRight="@id/ageText"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="조언" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="300dp"
        android:textSize="25dp"
        android:text="예상\n병명" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:text="체온"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginTop="55dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text5"
        android:textSize="25dp"
        android:layout_alignTop="@id/text5"
        android:layout_marginLeft="55dp"
        android:text="36.5도"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="215dp"
        android:textSize="25dp"
        android:text="심장\n나이" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="82dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="101dp"
        android:src="@drawable/heartbit" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameText"
        android:layout_toLeftOf="@id/nameText"
        android:textSize="25dp"
        android:text="이름 : " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ageText"
        android:layout_below="@id/textView4"
        android:textSize="25dp"
        android:text="나이 : " />




</RelativeLayout>